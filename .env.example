# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/swaperex.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment
ENVIRONMENT=development
DEBUG=true
DRY_RUN=true

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
ADMIN_TOKEN=your_admin_api_token

# Deposit Provider (Stage 2)
PROVIDER=dryrun  # dryrun, cryptoapis, nowpayments
# CRYPTOAPIS_KEY=your_cryptoapis_key
# NOWPAYMENTS_KEY=your_nowpayments_key
# DEPOSIT_WEBHOOK_SECRET=your_webhook_secret

# HD Wallet Extended Public Keys (Stage 2)
# Generate with: BIP84 for BTC/LTC, BIP44 for ETH/TRX
# NEVER store private keys - xpub only!
# XPUB_BTC=zpub...  # BIP84 native SegWit (bc1q addresses)
# XPUB_LTC=Ltub...  # BIP84 native SegWit (ltc1q addresses)
# XPUB_ETH=xpub...  # BIP44 (0x addresses, works for BSC/Polygon too)
# XPUB_TRX=xpub...  # SLIP44 (T... addresses)

# Routing Configuration (Stage 2)
# THORCHAIN_API_URL=https://thornode.ninerealms.com
# DEX_AGGREGATOR_API_URL=
# MM2_RPC_URL=

# Safety Guards
HOT_WALLET_THRESHOLD=0.0  # 0 = disabled
